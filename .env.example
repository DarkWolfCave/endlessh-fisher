# Endlessh Game - Environment Configuration
# Copy to .env and fill in your values: cp .env.example .env

# Django
SECRET_KEY=change-me-to-a-random-string
DJANGO_SETTINGS_MODULE=config.settings.production
ALLOWED_HOSTS=your-domain.example.com
# Choose a random, non-obvious path for Django admin (e.g., "x8f2k9admin/")
ADMIN_URL=your-secret-admin-path/
DEBUG=False

# PostgreSQL
POSTGRES_DB=endlessh_game
POSTGRES_USER=endlessh_game
POSTGRES_PASSWORD=change-me
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://:change-me@redis:6379/1
REDIS_PASSWORD=change-me
CELERY_BROKER_URL=redis://:change-me@redis:6379/0
CELERY_RESULT_BACKEND=redis://:change-me@redis:6379/0

# InfluxDB — connection to your InfluxDB instance with endlessh-go metrics
INFLUXDB_URL=http://your-influxdb-host:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=your-org
INFLUXDB_BUCKET=your-bucket

# Privacy — show real IP addresses instead of SHA256 hashes (default: false)
SHOW_REAL_IP=false

# Language — "de" for German, "en" for English (default: de)
GAME_LANGUAGE=de

# IP Intelligence — optional AbuseIPDB API key (free tier: 1000 req/day)
# Leave empty to use only Shodan InternetDB (no key required)
ABUSEIPDB_API_KEY=

# Reverse Proxy (production only)
# GAME_DOMAIN is used in Traefik labels and ALLOWED_HOSTS
GAME_DOMAIN=your-domain.example.com
# Only needed if using Traefik as reverse proxy (default: letsencrypt)
CERT_RESOLVER=letsencrypt
